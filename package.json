{
  "name": "json-l10n-diff",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Client-side JSON localization (l10n) comparison and diff tool with visual tree display and inline editing",
  "author": "iirving",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iirving/json-l10n-diff.git"
  },
  "keywords": [
    "json",
    "localization",
    "l10n",
    "i18n",
    "diff",
    "compare",
    "translation"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-i18n": "^11.1.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^4.0.4",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^10.5.1",
    "jsdom": "^27.0.1",
    "prettier": "^3.4.2",
    "vite": "npm:rolldown-vite@7.1.17",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.17"
  }
}
